{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
      "resolveJsonModule": true,
      "allowJs": true
    },
    "include": ["src/**/*.ts", "src/**/*.json"], 
    "exclude": ["node_modules"]
  }
  